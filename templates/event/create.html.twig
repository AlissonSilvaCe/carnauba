{% extends 'base.html.twig' %}

{% block title %}Carnaúba | Controle de Eventos{% endblock %}

{% block body %}

<div class="row">

<section class="content-header">
    <h1>
        Carnaúba  <small>Sistema de apoio a eventos</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i> Início</a></li>
        <li><a href="/event"><i class="fa fa-calendar"></i> Eventos</a></li>
        <li class="active">Incluir</li>
    </ol>
</section>
<br>

{% include 'includes/message.html.twig' %}

    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                  <h3 class="box-title"><strong>Cadastrar evento</strong></h3>
            </div>
                <div class="box-body">

                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                       <div class="box-footer">
                            <div class="pull-left">
                                <button type="submit" class="btn btn-block btn-success"><i class="fa fa-fw fa-floppy-o"></i> Salvar</button>                
                                <a href="/event"><button type="button" class="btn btn-block btn-primary"><i class="fa fa-fw fa-arrow-circle-left"></i> Voltar</button></a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                            
                </div>
        </div>
    </div>
</div>

{% endblock %}